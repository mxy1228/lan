<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_bg">


    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:padding="@dimen/ds16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mp3_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontsize36"
            android:text="光辉岁月"/>

        <TextView
            android:id="@+id/mp3_item_tips_tv"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/ds4"
            android:layout_height="wrap_content"
            android:text="AAAAAA"
            android:textSize="@dimen/fontsize24"/>

    </LinearLayout>

    <Button
        android:id="@+id/mp3_item_download_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_6"
        android:text="@string/download"/>

    <Button
        android:id="@+id/mp3_item_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/play"
        android:background="@color/color_7"/>

</LinearLayout>